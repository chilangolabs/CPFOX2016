extends ./layout.jade

block content
  .navbar-fixed
    nav.teal.lighten
      .nav-wrapper
        ul.right.hide-on-med-and-down
          li
            a(href="proyectos") Login
          li
            a.waves-effect.waves-light.amber.darken-4.btn(href="registro") Unete
  .row.container
    +alerts()
    h3 Registro
    form.col.s12(method="POST")
      .row 
        .input-field.col.s6
          i.material-icons.prefix account_circle
          input#name.validate(type="text" name="name")
          label(for="name") Nombre
      .row 
        .input-field.col.s6
          i.material-icons.prefix query_builder
          input#age.validate(type="number" name="age")
          label(for="age") Edad
      .row 
        .input-field.col.s6
          i.material-icons.prefix language
          input#localidad.validate(type="text" name="localidad")
          label(for="localidad") Localidad
      .row 
        .input-field.col.s6
          i.material-icons.prefix email
          input#mail.validate(type="email" name="mail")
          label(for="mail") Correo electronico
      .row 
        .input-field.col.s6
          i.material-icons.prefix verified_user
          input#pass.validate(type="password" name="pass")
          label(for="pass") Contrase√±a
      .row 
        .input-field.col.s6.right-align
          button.btn.waves-effect.waves-light(type="submit" name="action") Enviar
