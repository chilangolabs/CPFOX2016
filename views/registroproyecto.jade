extends ./layout.jade

block content
  .navbar-fixed
    nav
      .nav-wrapper
        ul.right.hide-on-med-and-down
          li
            a Login
          li
            a.modal-trigger(href="#modal") Unete
  .row.container
    h3 Registro de Proyecto
    form.col.s12
      .row 
        .input-field.col.s6
          i.material-icons.prefix view_list
          input#name.validate(type="text" name="name")
          label(for="name") Nombre
      .row 
        .input-field.col.s6
          i.material-icons.prefix language
          input#localidad.validate(type="text" name="localidad")
          label(for="localidad") Localidad
      .row 
        .input-field.col.s6
          i.material-icons.prefix email
          input#mail.validate(type="email" name="mail")
          label(for="mail") Correo electronico
      .row 
        .input-field.col.s6
          i.material-icons.prefix description
          textarea#descrip.materialize-textarea(name="descrip")
          label(for="descrip") Descripci√≥n del proyecto
      .row 
        .input-field.col.s6.right-align
          button.btn.waves-effect.waves-light(type="submit" name="action") Enviar
